{
	"name": "lapshop-server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"repository": "git@github.com:IkhromW/lapshop-server.git",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"build": "rimraf ./dist && tsc",
