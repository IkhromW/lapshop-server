		"start": "yarn build && node dist/index.js"
	},
	"dependencies": {
		"@apollo/server": "^4.7.1",
		"graphql": "^16.6.0"
	},
	"devDependencies": {
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"eslint": "^8.39.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "2.8.8",
		"rimraf": "^5.0.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.0.4"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"type": "module"
}
