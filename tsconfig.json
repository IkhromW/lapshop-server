{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"strictFunctionTypes": false,
		"target": "ES2021",
		"moduleResolution": "node"
	},
	"ts-node": {
		// Tell ts-node CLI to install the --loader automatically
		"esm": true
	}
}
